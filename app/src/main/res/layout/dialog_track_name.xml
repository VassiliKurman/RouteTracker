<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:paddingTop="@dimen/dialog_title_top_padding"
        android:paddingBottom="@dimen/dialog_title_bottom_padding"
        android:paddingStart="@dimen/dialog_title_side_padding"
        android:paddingEnd="@dimen/dialog_title_side_padding"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/dialog_title"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/dialog_edit_text_track_name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dialog_text_top_padding"
        android:paddingStart="@dimen/dialog_text_side_padding"
        android:paddingEnd="@dimen/dialog_text_side_padding"
        android:paddingBottom="@dimen/dialog_text_bottom_padding"
        android:layout_marginBottom="@dimen/dialog_text_bottom_padding"
        android:hint="@string/dialog_hint_track_name"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>